{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "xiuxian_wendao.hmas.digital_thread.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "requirement_id",
    "source_nodes_accessed",
    "hard_constraints_checked",
    "confidence_score"
  ],
  "properties": {
    "requirement_id": {
      "type": "string",
      "minLength": 1
    },
    "source_nodes_accessed": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["node_id"],
        "properties": {
          "node_id": {
            "type": "string",
            "minLength": 1
          },
          "saliency_at_time": {
            "type": ["number", "null"]
          }
        }
      }
    },
    "hard_constraints_checked": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  }
}
