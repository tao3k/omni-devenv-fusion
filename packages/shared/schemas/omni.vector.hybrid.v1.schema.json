{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "omni.vector.hybrid.v1.schema.json",
  "title": "Omni Vector Hybrid Payload v1",
  "description": "Single hybrid search result. Legacy field 'keywords' is forbidden (use routing_keywords in tool_search only).",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "id", "content", "metadata", "source", "score"],
  "properties": {
    "schema": {
      "type": "string"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "content": {
      "type": "string",
      "minLength": 1
    },
    "metadata": {
      "type": "object"
    },
    "source": {
      "type": "string"
    },
    "score": {
      "type": "number"
    },
    "vector_score": {
      "type": "number"
    },
    "keyword_score": {
      "type": "number"
    }
  }
}
