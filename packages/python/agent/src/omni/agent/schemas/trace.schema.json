{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExecutionTrace",
  "description": "Complete task execution trace with environment snapshot and causal chain",
  "type": "object",
  "properties": {
    "trace_id": {
      "type": "string",
      "description": "Unique identifier (UUID)"
    },
    "task_description": {
      "type": "string",
      "description": "Task description"
    },
    "steps": {
      "type": "array",
      "description": "Execution steps with commands and outputs",
      "items": {
        "$ref": "#/$defs/ExecutionStep"
      }
    },
    "env_fingerprint": {
      "type": "object",
      "description": "Environment fingerprint: directory structure, key config states"
    },
    "total_duration_ms": {
      "type": "number",
      "description": "Total execution duration in milliseconds"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of trace creation"
    },
    "success": {
      "type": "boolean",
      "description": "Whether the execution was successful"
    },
    "domain": {
      "type": "string",
      "description": "Domain: file_manipulation, git, test, search"
    },
    "nu_pattern": {
      "type": "string",
      "description": "Core command pattern: ls|where|save"
    },
    "tags": {
      "type": "array",
      "description": "Tags for categorization",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["trace_id", "task_description", "steps", "success"],
  "$defs": {
    "ExecutionStep": {
      "type": "object",
      "description": "A single execution step",
      "properties": {
        "command": {
          "type": "string",
          "description": "Command executed"
        },
        "output": {
          "type": "string",
          "description": "Command output"
        },
        "success": {
          "type": "boolean",
          "description": "Whether the step succeeded"
        },
        "duration_ms": {
          "type": "number",
          "description": "Step duration in milliseconds"
        }
      },
      "required": ["command", "success"]
    }
  }
}
